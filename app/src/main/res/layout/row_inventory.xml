<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:elevation="6dp"
    android:backgroundTint="#3C2A21"
    android:foreground="?attr/selectableItemBackground"
    android:padding="14dp"
    android:radius="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- ITEM NAME -->
        <TextView
            android:id="@+id/txtInvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="10dp"
            android:text="Item Name"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <!-- QTY BOX -->

        <!-- EDIT BTN -->
        <TextView
            android:id="@+id/txtInvQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="10dp"
            android:background="#F5D98B"
            android:backgroundTint="#F5D98B"
            android:gravity="center"
            android:padding="12dp"
            android:radius="12dp"
            android:text="12"
            android:textColor="#3C2A21"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnEditInv"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_marginEnd="6dp"
            android:backgroundTint="#D4A017"
            android:paddingHorizontal="14dp"
            android:radius="20dp"
            android:text="Edit"
            android:textColor="@android:color/white"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- DELETE BTN -->
        <Button
            android:id="@+id/btnDeleteInv"
            android:layout_width="42dp"
            android:layout_height="43dp"
            android:backgroundTint="#C62828"
            android:padding="10dp"
            android:radius="20dp"
            android:text="X"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

</androidx.cardview.widget.CardView>